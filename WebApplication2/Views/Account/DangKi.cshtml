
@{
    ViewBag.Title = "DangKi";
}
<link href="@Url.Content("~/Content/styleDangKi.css")" rel="stylesheet" type="text/css" />

<script type="text/javascript">

    function Register() {
        var validated = true;
        var txtUserName = document.getElementById("txtUserName");
        if (txtUserName.value == "" || txtUserName.value == null) {
            document.getElementById("RequiredUserName").style.display = "block";
            validated = false;
            
        }

        var txtPassword = document.getElementById("txtPassword");
        if (txtPassword.value == "" || txtPassword.value == null) {
            document.getElementById("RequiredPassword").style.display = "block";
            validated = false;


            
        }
       
        var txtRePassword = document.getElementById("txtConfirmPassword");
        if (txtRePassword.value != txtPassword.value) {
            document.getElementById("confirmPassword").style.display = "block";
            validated = false;

        }


        var txtEmail = document.getElementById("txtEmail");
        if (txtEmail.value == "" || txtEmail.value == null) {
            document.getElementById("RequiredEmail").style.display = "block";
            validated = false;
        }
        
        
        var txtPhoneNo = document.getElementById("txtPhoneNo");
        if (txtPhoneNo.value == "" || txtPhoneNo.value == null) {
            document.getElementById("RequiredPhoneNo").style.display = "block";
            validated = false;
        }

        var txtAddress = document.getElementById("txtAddress");
        if (txtAddress.value == "" || txtAddress.value == null) {
            document.getElementById("RequiredAddress").style.display = "block";
            validated = false;
        }
        

        if (validated == true) {
            alert("dsfdsf");
            document.submitForm.submit();
            
        }
    }

</script>

<div class="BlockContent marginleft">
    <div class="defaultTitle LoginForm-title">
        <h1>
            Đăng ký tài khoản
        </h1>
    </div>
    <div class="defaultContent LoginForm-content CreateAccountContainer">
        <h3>
            Thông tin tài khoản
        </h3>
        <p>
            Nhập thông tin Email và mật khẩu
        </p>
        <div class="FormContainer HorizontalFormContainer NarrowFormContainer">
            <dl>
                <form name='submitForm' method='POST' action='../Account/DangKi'>
                <dt>
                    <span class="required">*</span> Tên tài khoản:
                </dt>
                <dd>
                    <input name="newUserName" type="text" id="txtUserName" class="NormalTextBox" style="width:350px;">

                    <span id="RequiredUserName"  style="display:none;"><br>Yêu cầu nhập tên tài khoản!</span>
                    <span id="RegularExpressionUserName" style="display:none;"><br>Tên tài khoản không hợp lệ!</span>
                </dd>
                <dt>
                    <span class="required">*</span> Mật khẩu:
                </dt>
                <dd>
                    <input name="password" type="password" id="txtPassword" class="NormalTextBox" style="width:200px;">
                    <span id="RequiredPassword" style="display:none;"><br>Yêu cầu nhập thông tin Mật khẩu!</span>
                    <span id="RegularExpressionPassword" style="display:none;"><br>Mật khẩu của bạn phải có ít nhất 6 ký tự!</span>
                </dd>
                <dt>
                    <span class="required">*</span> Nhập lại mật khẩu:
                </dt>
                <dd>
                    <input name="rePassword" type="password" id="txtConfirmPassword" class="NormalTextBox" style="width:200px;">
                    <span id="confirmPassword" style="display:none;" class="required">Mật khẩu xác nhận không khớp</span>
                </dd>

                <dt>
                    <span class="required">*</span> Email:
                </dt>
                <dd>
                    <input name="email" type="text" id="txtEmail" class="NormalTextBox" style="width:350px;">

                    <span id="RequiredEmail" style="display:none;"><br>Yêu cầu nhập thông tin địa chỉ Email!</span>
                    <span id="RegularExpressionEmail" style="display:none;"><br>Địa chỉ Email không hợp lệ!</span>
                </dd>
                
                <dt><span class="required">*</span> Điện thoại:</dt>
                <dd>
                    <input name="phoneNo" type="text" maxlength="12" id="txtPhoneNo" class="NormalTextBox" style="width:200px;">
                    <span id="RequiredPhoneNo" style="display:none;"><br>Yêu cầu nhập thông tin Điện thoại liên hệ!</span>
                    <span id="RegularExpressionPhoneNo" style="display:none;"><br>Số điện thoại chỉ bao gồm số!</span>
                </dd>
                <dt><span class="required">*</span> Địa chỉ:</dt>
                <dd>
                    <input name="address" type="text" id="txtAddress" class="NormalTextBox" style="width:350px;">
                    <span id="RequiredAddress" style="display:none;"><br>Yêu cầu nhập thông tin Địa chỉ người nhận!</span>
                </dd>
                

                <dt>&nbsp;</dt>
                <dd>
                    <input type="button" name="ctl00$cphMain$ctl00$ctl01$ctl00$btnSubmit" value="Tạo tài khoản của tôi" onclick="Register();" id="cphMain_ctl00_ctl01_ctl00_btnSubmit" class="CreateAccountButton">
                </dd>
                </form>
            </dl>
        </div>
        <p>
        </p>
    </div>
    <div class="defaultFooter LoginForm-footer"><div></div></div>
</div>

